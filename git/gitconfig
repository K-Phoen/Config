[merge]
  tool = vimdiff

[color]
  ui = true
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[hooks]
  disablefixpermissions = true
  disablecleanfiles = true
  disablejslint = true

[alias]
  slog = "log --all --graph --pretty=format:'%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)    %an%Creset' --abbrev-commit"
